// based on a keyboard map from an 'xkb/symbols/pt' file

partial default alphanumeric_keys
xkb_symbols "basic" {

    include "pt(basic)"


    name[Group1]="Portuguese (PT, Custom by Rod)";

    key <AE11>  { [apostrophe,   question,    grave, questiondown ] };

    key <AD11>  { [      plus,   asterisk, bracketleft, dead_diaeresis] };
    key <AD12>  { [dead_acute, dead_grave,  bracketright,  dead_macron ]  };
    key <AC11>  { [ masculine, ordfeminine, braceleft,   braceright ] };
    key <BKSL> { [dead_tilde, dead_circumflex, braceright, dead_breve]     };

    key <AB08>  { [     comma,  semicolon, less,  dead_ogonek ]   };
    key <AB09>  { [    period,   colon, greater, periodcentered ]       };
    key <AB10>  { [     minus, underscore,  slash, emdash ] };

 // Removing the c-space remapping to esc. Want to give it a shot with jedi-vim
 //   key <SPCE>  { type[Group1] = "PC_CONTROL_LEVEL2", [ space, Escape ] };
};

